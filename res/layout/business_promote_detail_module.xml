<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:fadingEdge="none">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/main_page_color">   
    <!-- 商铺名称 -->
    <TextView android:id="@+id/bNameTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/business_promote_detail_businessMessage_LinearLayout_TextView_textColor"
        android:layout_marginBottom="5dp"/>
    <!-- 主要商品 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView 
            android:text="@string/main_products"
            style="@style/business_promote_detail_businessPropertyTxt_TextView"/>
        <TextView 
            android:id="@+id/mainProductsTxt"
            style="@style/business_promote_detail_businessPropertyValue_TextView"/>
    </LinearLayout> 
    <!-- 描述 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView 
            android:text="@string/feature"
            style="@style/business_promote_detail_businessPropertyTxt_TextView"/>
        <TextView 
            android:id="@+id/featureTxt"
            style="@style/business_promote_detail_businessPropertyValue_TextView"/>
    </LinearLayout>
    <!-- 营业时间 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView 
            android:text="@string/business_hours"
			style="@style/business_promote_detail_businessPropertyTxt_TextView"/>
        <TextView 
            android:id="@+id/businessHoursTxt"
            style="@style/business_promote_detail_businessPropertyValue_TextView"/>
    </LinearLayout>
    <!-- 人均消费 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView 
            android:text="@string/per_consume"
            style="@style/business_promote_detail_businessPropertyTxt_TextView"/>
        <TextView 
            android:id="@+id/perConsumeTxt"
            style="@style/business_promote_detail_businessPropertyValue_TextView"/>
    </LinearLayout>
    <!-- 地铁站 -->
