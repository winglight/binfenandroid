	<!-- 优惠列表 -->
    <LinearLayout
        android:id="@+id/promoteListLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        
    </LinearLayout>
    <!-- 电话 layout -->
    <LinearLayout
        android:id="@+id/telephoneLayout"
        style="@style/business_promote_detail_businessMessage_LinearLayout">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/telphone"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:id="@+id/telphoneTxt"
            style="@style/business_promote_detail_businessMessage_TextView"/>
        <ImageView
	            android:layout_width="12dp"
	            android:layout_height="12dp"   
	            android:layout_gravity="center_vertical|right"
	            android:src="@drawable/details" 
	            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <!-- 地址 layout -->
    <LinearLayout
        android:id="@+id/addressLayout"
        android:layout_marginTop="1dp"
        style="@style/business_promote_detail_businessMessage_LinearLayout">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:id="@+id/addressTxt"
            style="@style/business_promote_detail_businessMessage_TextView"/>
        <ImageView
	            android:layout_width="12dp"
	            android:layout_height="12dp"   
	            android:layout_gravity="center_vertical|right"
	            android:src="@drawable/details" 
	            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <!-- 商户图片 -->
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/business_photo"
        android:layout_gravity="center_vertical"
        android:textColor="@color/business_promote_detail_businessMessage_LinearLayout_TextView_textColor"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/business_listview_divider"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"/>
    <ImageView 
        android:id="@+id/businessPhotoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"/>
    <!-- 网友推介 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/netfriend_referral"
            android:textColor="@color/business_promote_detail_businessPropertyTxt_TextView_textColor"/>
        <TextView 
            android:id="@+id/netfriendReferralTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/business_promote_detail_businessPropertyTxt_TextView_textColor"/>
    </LinearLayout>
